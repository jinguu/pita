{
  "manifest_version": 2,

  "name": "Pita",
  "description": "This extension restyles piazza",
  "version": "1.0",

  "browser_action": {
    "default_title": "pita"
  },
  "content_scripts": [
    {
      "matches": ["http://www.piazza.com/*"],
      "css": ["pita.css"],
      "js": ["pita.js"]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}